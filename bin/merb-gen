#!/usr/bin/env ruby

require 'rubygems'
require 'merb-core'
require 'merb-gen'

application = false # TODO: figure out a way to infer this

if application
  Merb::ApplicationGenerators.run_cli(Dir.pwd, 'merb-gen', Merb::VERSION, ARGV)
else
  Merb::ComponentGenerators.run_cli(Dir.pwd, 'merb-gen', Merb::VERSION, ARGV)
end